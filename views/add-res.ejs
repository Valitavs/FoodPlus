            </div>
            <div class="input-1">
                <label for="horaclose" class="form-label">Hora de cierre</label>
                <input type="time" class="form-control" style="width: 200px;" id="horaclose" name="hora_close">
            </div>
            <div class="input-1">
                <label for="direccionres" class="form-label">DirecciÃ³n</label>
                <input type="text" class="form-control" id="direccionres" name="direccion_res">
            </div>
            <div class="input-1">
                <label for="image">Logo de restaurante</label>
                <input type="file" id="image" name="image">
            </div>
            <div style="display: flex; gap: 10px;">
                <button class="agregar-menu" type="submit">Agregar</button>
                <a class="cerrar" href="/perfil/<%=usuario.idusuarios %>">Cerrar</a>
            </div>
        </form>
    </div>
    <% } %>
</body>

</html>