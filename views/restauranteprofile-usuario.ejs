                <div class="car-x">
                    <h1 class="text-carrito">Carrito de Compras</h1>
                    <a id="close">
                        <img src="/imagenes/x-gris.png" alt=""></img>
                    </a>
                </div>
                <div class="barra-roja"></div>
                <div class="ordenes-comida">
                    <% carrito.forEach((carro)=>{%>
                    <div class="orden-comida">
                        <img class="pizza-carrito" src="/uploads/<%- carro.imgmenu_producto %>" alt="">
                        <div>
                            <div class="porciones">
                                <h1 class="nom-comida"><%- carro.nombre_producto %></h1>
                            </div>
                            <h6><%- carro.nombreres_producto %></h6>
                            <h1 class="orden-precio">$<%- carro.precio_producto %></h1>
                        </div>
                        <div class="estados">
                            <%if(carro.estado == "Aceptado"){%>
                            <div class="estado1"><h1>Aceptado</h1></div>
                            <%}else if(carro.estado == "Rechazado"){%>
                            <div class="estado2"><h1>Rechazado</h1></div>
                            <%}else{%>
                            <div class="estado3"><h1>Pendiente</h1></div>
                            <%}%>
                        </div>
                        <a href="/deletecarrito/<%- carro.idcarrito_compras %>/<%- carro.idres_producto %>/<%- carro.idusuario %>"><img class="x" src="/imagenes/x.png" alt=""></a>
                    </div>
                    <%})%>
                </div>

                <div class="confirmar-pedido">
                    <h4>Total del carrito</h4>
                    <div class="barra-roja"></div>
